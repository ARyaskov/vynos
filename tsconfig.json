{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "target": "es5",
    "module":"es2015",
    "lib": ["dom", "dom.iterable", "es2015", "es2015.iterable"],
    "declarationDir": "dist/types",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "include": [
    "ynos",
    "node_modules/web3-typescript-typings/index.d.ts"
  ]
}
