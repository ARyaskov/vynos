{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "typeRoots": [
      "typings",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "node_modules/web3-typescript-typings/index.d.ts"
  ]
}
